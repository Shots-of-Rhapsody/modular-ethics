{
  "name": "modular-ethics",
  "version": "1.0.0",
  "description": "Modular Ethics - interactive scenarios and experiments in moral reasoning.",
  "license": "MIT",
  "author": "Modular Ethics Contributors",
  "homepage": "https://github.com/Shots-of-Rhapsody/modular-ethics#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shots-of-Rhapsody/modular-ethics.git"
  },
  "bugs": {
    "url": "https://github.com/Shots-of-Rhapsody/modular-ethics/issues"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "serve public -l 5173",
    "build:css": "node -e \"require('fs').mkdirSync('public/assets',{recursive:true})\" && postcss src/styles/main.css -o public/assets/bundle.css",
    "watch:css": "node -e \"require('fs').mkdirSync('public/assets',{recursive:true})\" && postcss src/styles/main.css -o public/assets/bundle.css -w",
    "build": "npm run build:css && npm run sync",
    "sync": "node scripts/sync-assets.mjs",
    "validate:scenarios": "node scripts/validate-scenarios.mjs",

    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -w .",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage --passWithNoTests",
    "prepare": "husky"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/public"
    ],
    "moduleFileExtensions": [
      "js",
      "mjs",
      "cjs",
      "json"
    ],
    "transform": {},
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,mjs}",
      "public/**/*.js",
      "!public/assets/**",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2023": true,
      "node": true
    },
    "extends": [
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "ignorePatterns": [
      "public/assets/",
      "coverage/",
      "dist/",
      "node_modules/"
    ],
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    }
  },
  "lint-staged": {
    "*.{js,mjs,css,md,json}": [
      "eslint --fix --max-warnings=0",
      "prettier -w"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "eslint": "^9.11.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-promise": "^7.1.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "prettier": "^3.3.3",
    "serve": "^14.2.5"
  }
}
